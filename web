using System.Collection;
using System.Collection.Generic;
using UnityEngine;

public class CallingMap:MonoBehaviour
{


  void Start()
  {
  }
  
  void Update()
  {
  }
  
  public void LauchMaps()
  {
      bool fail=false;
      string bundleID="com.google.android.apps.maps";
      AndroidJavaClass up=new AndroidJavaClass("com.unity3d.player.UnityPlayer");                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
      AndroidJavaObject ca = up.GetStatic<AndroidJavaObject>("currentActivity");
      AndroidJavaObject packageManager = ca.Call<AndroidJavaObject>("getPackageManager");

      AndroidJavaObject launchIntent = null;
      
      try
      {
          launchInternet=packageManager.Call<AndroidJavaObject>("getLaunchIntentForPackage",bundleID);
      }
      catch (System.Exception e)
        {
            fail = true;
        }

        if (fail)
        { 
            Application.OpenURL("https://google.com");
        }
        else 
            ca.Call("startActivity", launchIntent);

        up.Dispose();
        ca.Dispose();
        packageManager.Dispose();
        launchIntent.Dispose();

        Debug.Log(bundleId);



    }
 public void openiphone()
    {
        Application.OpenURL("https://www.phonearena.com/phones/Apple-iPhone-7_id9815/reviews");
    }

    public void opensamsung()
    {
        Application.OpenURL("https://www.phonearena.com/phones/Samsung-Galaxy-S8_id10311/reviews");
    }







}
